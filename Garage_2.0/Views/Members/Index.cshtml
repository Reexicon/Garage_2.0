@model IEnumerable<Garage_2._0.Models.Member>

@{
    ViewBag.Title = "Members List";
}

<h2>@ViewBag.Title</h2>

<p>
    <span class="buttonspan">
        @Html.ActionLink("Register Member", "Create")
    </span>
</p>

@using (Html.BeginForm("Index", "Members", FormMethod.Get))
{
    <table class="table tblShadow">
        <tr>
            <th>
                First Name:
            </th>
            <th>
                Last Name:
            </th>
            <th>
                Phone No:
            </th>
            <th>
                Mail:
            </th>
        </tr>
        <tr>
            <td>
                @Html.TextBox("SearchFirstName")
            </td>
            <td>
                @Html.TextBox("SearchLastName")
            </td>
            <td>
                @Html.TextBox("SearchPhoneNo")
            </td>
            <td>
                @Html.TextBox("SearchMail")
            </td>
            <td>
                <input type="submit" value="Search" />
            </td>
        </tr>
    </table>

}
<table class="table tblShadow">
    <tr>
        <th>
            @Html.ActionLink("First Name", "Index", new {sortOrder = ViewBag.FirstNameSortParm, searchFirstName = ViewBag.SearchFirstName,
            searchLastName = ViewBag.SearchLastName, searchPhoneNo = ViewBag.SearchPhoneNo, searchMail = ViewBag.SearchMail })
        </th>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.LastNameSortParm,searchFirstName = ViewBag.SearchFirstName,
            searchLastName = ViewBag.SearchLastName, searchPhoneNo = ViewBag.SearchPhoneNo,searchMail = ViewBag.SearchMail })
        </th>
        <th>
            @Html.ActionLink("Phone No", "Index", new { sortOrder = ViewBag.PhoneNoSortParm, searchFirstName = ViewBag.SearchFirstName, 
            searchLastName = ViewBag.SearchLastName, searchPhoneNo = ViewBag.SearchPhoneNo, searchMail = ViewBag.SearchMail })
        </th>
        <th>
            @Html.ActionLink("Mail", "Index", new { sortOrder = ViewBag.MailSortParm, searchFirstName = ViewBag.SearchFirstName, 
            searchLastName = ViewBag.SearchLastName, searchPhoneNo = ViewBag.SearchPhoneNo, searchMail = ViewBag.SearchMail })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.ActionLink("Change", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Vehicles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Deregister", "Delete", new { id = item.Id })
            </td>
        </tr>
    }


    </table>
