<body class="Receipt">

    <div class="container">
        <div class="row">
            <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <address>
                            <strong>Garage 2.0</strong>
                            <br>
                            Årstaängsvägen 9
                            <br>
                            117 43 Stockholm
                            <br>
                            <abbr title="Phone">P:</abbr>+46 (0)10-471 10 60
                        </address>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                        <p>
                            <em>Date: @DateTime.Now.ToString("MMMM dd, yyyy")</em>
                        </p>
                        <p>
                            <em>Receipt #: 0000015</em>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="text-center">
                        <img src="http://www.garagedoorrepairsmithtown.com/wp-content/uploads/2015/12/garage1.png" alt="Garage 2.0" width="180" height="180">
                        <h1>Receipt</h1>
                    </div>
                    </span>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Vehicle</th>
                                <th>Parked</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="col-md-7">
                                    <em>
                                        @Html.DisplayFor(model => model.Vehicle.RegistrationNumber)
                                        @Html.DisplayFor(model => model.Vehicle.VehicleType)
                                        @Html.DisplayFor(model => model.Vehicle.Brand)
                                        @Html.DisplayFor(model => model.Vehicle.Model)
                                        @Html.DisplayFor(model => model.Vehicle.Color)
                                    </em></h4>
                                </td>
                                <td class="col-md-3">@Html.DisplayFor(model => model.Vehicle.WhenParked)</td>
                                <td class="col-md-1 text-center">@Html.DisplayFor(model => model.Cost)</td>
                                <td class="col-md-1 text-center">@Html.DisplayFor(model => model.Cost)</td>
                            </tr>

                            <tr>
                                <td>   </td>
                                <td>   </td>
                                <td class="text-right">
                                    <p>
                                        <strong>Subtotal: </strong>
                                    </p>
                                    <p>
                                        <strong>Tax: </strong>
                                    </p>
                                </td>
                                <td class="text-center">
                                    <p>
                                        <strong>-</strong>
                                    </p>
                                    <p>
                                        <strong>-</strong>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>   </td>
                                <td>   </td>
                                <td class="text-right"><h4><strong>Total: </strong></h4></td>
                                <td class="text-center text-danger"><h4><strong>@Html.DisplayFor(model => model.Cost)</strong></h4></td>
                            </tr>
                        </tbody>
                    </table>
                    <div style="text-align:center;">
                        <h1 style="text-align:center;">
                            Thank you for your business!
                        </h1>
                        <button onclick="myFunction()">Print receipt</button>


                    </div>
                </div>

            </div>

        </div>

        <div style="text-align:center;">
            <span class="buttonspan">
                @Html.ActionLink("Back to Garage", "Index")
            </span>
        </div>

