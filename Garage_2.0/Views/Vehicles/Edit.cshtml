@model Garage_2._0.Models.Vehicle

@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p>
        <span class="buttonspan">
            @Html.ActionLink("Back to Garage", "Index")
        </span>
    </p>

    <div class="form-horizontal divfooter tblShadow">
        <h4>Vehicle: @Html.DisplayFor(x => x.RegistrationNumber) @Html.DisplayFor(x => x.Brand )</h4>



