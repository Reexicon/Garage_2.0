@model IEnumerable<Garage_2._0.Models.Vehicle>

@{
    ViewBag.Title = "Garage";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Park a Vehicle", "Create")
</p>

@*@using (Html.BeginForm())*@
@using (Html.BeginForm("Index", "Vehicles", FormMethod.Get))
    {
    @*<p>
        Find by registration number or color: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>*@
    <table class="table">
        <tr>
            @*<th>
                Brand:
            </th>*@
            <th>
                Registration number:
            </th>
            <th>
                Color:
            </th>
            <th>
            </th>
        </tr>
        <tr>
            <td>
                @Html.TextBox("SearchReg")
            </td>
            <td>
                @Html.TextBox("SearchColor")
            </td>
            <td>
                <input type="submit" value="Search" />
            </td>
        </tr>
    </table>

}
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.VehicleType)*@
            @Html.ActionLink("Vehicle Type", "Index", new { sortOrder = ViewBag.VehicleTypeSortParm, searchReg = ViewBag.SearchReg, searchColor = ViewBag.SearchColor })
        </th>
        <th>
            @Html.ActionLink("Registration Number", "Index", new { sortOrder = ViewBag.RegistrationNumberSortParm, searchReg = ViewBag.SearchReg, searchColor = ViewBag.SearchColor })
        </th>
        <th>
            @Html.ActionLink("Color", "Index", new { sortOrder = ViewBag.ColorSortParm, searchReg = ViewBag.SearchReg, searchColor = ViewBag.SearchColor })
        </th>
        <th>
            @Html.ActionLink("Parked", "Index", new { sortOrder = ViewBag.WhenParkedSortParm, searchReg = ViewBag.SearchReg, searchColor = ViewBag.SearchColor })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhenParked)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Retrieve", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
